<Page x:Class="School.Pages.Classes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Classes">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="btnClass1" Grid.Column="0" Grid.Row="0" Style="{StaticResource btn_default}" Height="50" Width="150" Content="Class 1" Click="btnClass1_Click"/>
        <Button x:Name="btnClass2" Grid.Column="1" Grid.Row="0" Style="{StaticResource btn_default}" Height="50" Width="150" Content="Class 2" Click="btnClass2_Click"/>
        <Button x:Name="btnClass3" Grid.Column="0" Grid.Row="1" Style="{StaticResource btn_default}" Height="50" Width="150" Content="Class 3" Click="btnClass3_Click"/>
        <Button x:Name="btnClass4" Grid.Column="1" Grid.Row="1" Style="{StaticResource btn_default}" Height="50" Width="150" Content="Class 4" Click="btnClass4_Click"/>

    </Grid>
</Page>
